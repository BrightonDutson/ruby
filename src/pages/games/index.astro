---
import Header from '../../components/header.astro';
import Modal from '../../components/modal';
import Password from '../../components/password';
import Head from '../../layouts/allpages.astro';
import '../../styles/globals.css';
---

<Head />
<body>
    <Header />
    <Password client:only="react" />
    <Modal client:only="react" />
    <div id="pjs" class="dnone particles"></div>
    <div class="get-started-div">
        <h1 class="get-started-text">Games</h1>
    </div>
    <div class="search-div">
        <input
            type="text"
            oninput="search_games(this.value)"
            placeholder="Search For A Game..."
            class="search-input"
        />
        <select class="search-select" onchange="category_games(this.value)">
            <option value="">All</option>
            <option value="arcade">Arcade</option>
            <option value="platformer">Platformer</option>
            <option value="static">Static</option>
            <option value="racing">Racing</option>
            <option value="flash">Flash</option>
            <option value="adventure">Adventure</option>
            <option value="multiplayer">Multiplayer</option>
            <option value="retro">Retro</option>
            <option value="emulation">Emulation</option>
            <option value="sports">Sports</option>
            <option value="strategy">Strategy</option>
            <option value="shooter">Shooter</option>
            <option value="proxied">Proxied</option>
        </select>
        </div>
    <div class="games" id="games"></div>
    <script src="/js/games.js" type="module" is:inline></script>
    <script src="/js/searchGames.js" is:inline></script>
    <div class="games" id="games"></div>
    <script src="/js/games.js" type="module" is:inline></script>
    <script src="/js/searchGames.js" is:inline></script>
</body>

<style is:global>
    .get-started-div {
        position: absolute;
        top: 25%;
        left: 50%;
        transform: translate(-50%, -50%);
        -moz-transform: translate(-50%, -50%);
        -webkit-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        -o-transform: translate(-50%, -50%);
    }
    .search-div {
        position: absolute;
        display: flex;
        gap: 0.5rem;
        top: 40%;
        left: 53.25%;
        transform: translate(-50%, -50%);
        -moz-transform: translate(-50%, -50%);
        -webkit-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        -o-transform: translate(-50%, -50%);
    }
    .search-input {
        background: var(--text-bg-color);
        color: var(--text-color);
        font-family: var(--font);
        border-radius: 0.5rem;
        border: 1px solid var(--border-color);
        text-align: center;
        width: 20rem;
        height: 2.5rem;
    }
    .search-select {
        background: var(--text-bg-color);
        color: var(--text-color);
        font-family: var(--font);
        border-radius: 0.5rem;
        border: 1px solid var(--border-color);
        text-align: center;
        width: 5rem;
        height: 2.5rem;
    }
    @media (max-width: 823px) {
        .search-div {
            left: 52.99%;
        }
    }
    @media (max-width: 599px) {
        .search-select {
            width: 20rem;
        }
        .search-div {
            flex-wrap: wrap;
            left: 50%;
        }
    }
    .get-started-text {
        font-size: 3rem;
        text-align: center;
        margin-top: 2rem;
        color: var(--text-color);
        font-family: var(--font);
    }
    .games {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        padding-bottom: 1rem;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%);
        -moz-transform: translate(-50%);
        -webkit-transform: translate(-50%);
        -ms-transform: translate(-50%);
        -o-transform: translate(-50%);
        width: 70rem;
    }
    @media (max-width: 1051px) {
        .games {
            width: 50rem;
        }
    }
    @media (max-width: 768px) {
        .games {
            width: 20rem;
        }
    }
    .game-tile {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        align-content: center;
        width: 12rem;
        height: 14rem;
        gap: 0.5rem;
        color: var(--text-color);
        font-family: var(--font);
        font-size: 1.5rem;
        background-color: var(--text-bg-color);
        border-color: none;
        border-radius: 0.75rem;
        transition: all 0.2s ease-in-out;
        text-align: center;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        cursor: pointer;
    }
    .game-tile > img {
        width: 12rem;
        height: 10rem;
        object-fit: cover;
        margin-top: -4rem;
        border-radius: 0.75rem 0.75rem 0 0;
    }
    .game-tile > p {
        font-size: 1.25rem;
        height: 0;
        width: 12rem;
        text-align: center;
        margin-top: 0.75rem;
        color: var(--text-color);
        font-family: var(--font);
        margin: 0;
        /* box-sizing: border-box; */
    }
    .game-tile:hover {
        filter: drop-shadow(0 12px 12px var(--text-color));
    }
    .game-tile:active {
        filter: drop-shadow(0 5px 5px var(--text-color));
        width: 11.5rem;
        height: 13.5rem;
    }
    body {
        overflow-x: hidden;
    }
</style>
